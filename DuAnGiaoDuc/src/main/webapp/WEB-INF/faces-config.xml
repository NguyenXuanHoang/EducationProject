<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	
	
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{login.checkValidate()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/dangKy.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.checkValidate()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/dangKy.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{registerAdmission.choseSchool()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/chonTruong.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{registerAdmission.choseSchool()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
			<navigation-case>
			<from-action>#{registerAdmission.choseSchool()}</from-action>
			<from-outcome>return</from-outcome>
			<to-view-id>/dangKy.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/chonTruong.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{schoolChose.choseMajor()}</from-action>
			<from-outcome>group4</from-outcome>
			<to-view-id>/chonNganh4.xhtml</to-view-id>
		</navigation-case>
				<navigation-case>
			<from-action>#{schoolChose.choseMajor()}</from-action>
			<from-outcome>group2</from-outcome>
			<to-view-id>/chonNganh2.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{schoolChose.choseMajor()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{schoolChose.choseMajor()}</from-action>
			<from-outcome>retry</from-outcome>
			<to-view-id>/chonTruong.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/chonNganh4.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{major4Chose.submit()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/xacNhan.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{major4Chose.submit()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/chonNganh4.xhtml</to-view-id>
		</navigation-case>
				<navigation-case>
			<from-action>#{major4Chose.turnBack()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/chonTruong.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
		<navigation-rule>
		<from-view-id>/chonNganh2.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{major2Chose.submit()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/xacNhan.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{major2Chose.submit()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/chonNganh2.xhtml</to-view-id>
		</navigation-case>
				<navigation-case>
			<from-action>#{major2Chose.turnBack()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/chonTruong.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/xacNhan.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{submit.submit()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/thanhToan.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{submit.turnBack()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/chonTruong.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/thanhToan.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{checkOut.submit()}</from-action>
			<from-outcome>mobileCard</from-outcome>
			<to-view-id>/thanhToanBangCard.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{checkOut.submit()}</from-action>
			<from-outcome>atm</from-outcome>
			<to-view-id>/thanhToanBangATM.xhtml</to-view-id>
		</navigation-case>
			<navigation-case>
			<from-action>#{checkOut.submit()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/thanhToan.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/thanhToanBangCard.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{paymentByCard.submit()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/hoanThanh.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{paymentByCard.submit()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/thanhToanBangCard.xhtml</to-view-id>
		</navigation-case>
			<navigation-case>
			<from-action>#{paymentByCard.turnBack()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/thanhToan.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
		
	<navigation-rule>
		<from-view-id>/phieuDangKy.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{registerLetter.choseRegis()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/dangKy.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id></from-view-id>
		<navigation-case>
			<from-action>#{navigationButton.goHome()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{navigationButton.goRegisterLetter()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/phieuDangKy.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{navigationButton.goSearch()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/traCuu.xhtml</to-view-id>
		</navigation-case>
				<navigation-case>
			<from-action>#{navigationButton.goRegisterAdmissions()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/dangKy.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{navigationButton.goChangePass()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/doiMatKhau.xhtml</to-view-id>
		</navigation-case>
			<navigation-case>
			<from-action>#{navigationButton.cancelRegister()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/dangKy.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id></from-view-id>
		<navigation-case>
			<from-action>#{registerButton.submit()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/xacNhan.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{registerButton.payment()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/thanhToan.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{registerButton.returnPayment()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/xacNhan.xhtml</to-view-id>
		</navigation-case>
	
		<navigation-case>
			<from-action>#{registerButton.endRegister()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/phieuDangKy.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/doiMatKhau.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{changePass.submit()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/dangKy.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{changePass.submit()}</from-action>
			<from-outcome>fail</from-outcome>
			<to-view-id>/doiMatKhau.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
</faces-config>
